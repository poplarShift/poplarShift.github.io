@article{fer2017onedimensional,
  ids = {fer2017one},
  title = {One-Dimensional Evolution of the Upper Water Column in the {{Atlantic}} Sector of the {{Arctic Ocean}} in Winter},
  author = {Fer, Ilker and Peterson, Algot K. and Randelhoff, Achim and Meyer, Amelie},
  year = {2017},
  month = mar,
