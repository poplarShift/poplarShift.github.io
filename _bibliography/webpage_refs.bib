@article{randelhoff2020panarctic,
  title = {Pan-{{Arctic Ocean Primary Production Constrained}} by {{Turbulent Nitrate Fluxes}}},
  author = {Randelhoff, Achim and Holding, Johnna and Janout, Markus and Sejr, Mikael Kristian and Babin, Marcel and Tremblay, Jean-{\'E}ric and Alkire, Matthew B.},
  year = {2020},
