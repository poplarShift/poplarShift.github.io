  keywords = {and mixing processes,Arctic,diffusion,dissipation,marine,nitrate,nitrogen,Nitrogen cycling,Nutrients and nutrient cycling,phytoplankton,Phytoplankton,sea,turbulence,Turbulence,Upper ocean and mixed layer processes,variability,vertical fluxes,water},
